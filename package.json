{
  "name": "azure-pipelines-language-server",
  "description": "Azure Pipelines language server",
  "version": "0.1.0",
  "author": "Microsoft",
  "license": "MIT",
  "contributors": [
    {
      "name": "Gorkem Ercan",
      "email": "gorkem.ercan@gmail.com"
    },
    {
      "name": "Joshua Pinkney",
      "email": "joshpinkney@gmail.com"
    }
  ],
  "engines": {
    "node": "*"
  },
  "keywords": [
    "azure-pipelines",
    "LSP"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/azure-pipelines-language-server.git"
  },
  "dependencies": {
    "js-yaml": "^3.12.0",
    "jsonc-parser": "^1.0.3",
    "request-light": "^0.2.3",
    "vscode-json-languageservice": "3.0.12",
    "vscode-languageserver": "^4.0.0",
    "vscode-languageserver-types": "^3.6.1",
    "vscode-nls": "^3.2.2",
    "vscode-uri": "1.0.3",
    "yaml-ast-parser": "0.0.40"
  },
  "devDependencies": {
    "@types/mocha": "5.2.5",
    "@types/node": "^9.4.7",
    "coveralls": "^3.0.0",
    "mocha": "5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.0.1",
    "source-map-support": "^0.5.4",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "test": "mocha --require ts-node/register --ui tdd ./test/*.test.ts",
    "unittest": "mocha --require ts-node/register --ui tdd ./unittests/*.test.ts",
    "coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive --ui tdd ./test/*.test.ts",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "refreshVSToken": "vsts-npm-auth -config .npmrc"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/",
      "out"
    ],
    "all": true
  }
}
